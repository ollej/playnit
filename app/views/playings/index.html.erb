<h2>What's play'n?</h2>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="well well-small">
      <div class="map-container">
        <div id="map-index"><%= image_tag "loading.gif" %></div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <% @playings.each do |playing| %>
  <div class="well well-small">
    <div class="row-fluid">
      <% unless playing.photo.thumb.url.blank? %>
      <div class="playing-photo-thumb">
        <%= image_tag playing.photo.thumb.url, class: 'img-polaroid' %>
      </div>
      <% end %>
      <div class="playing-content">
        <h3>
        <% if playing.has_location %>
          <%= link_to playing.game, playing %>
        <% else %>
          <%= playing.game %>
        <% end %>
        </h3>
      </div>
      <div class="pull-right">
        <% if user_signed_in? and current_user == playing.user %>
        <%= link_to glyph('edit') + ' Edit', edit_playing_path(playing), class: 'btn btn-mini btn-primary' %>
        <%= link_to glyph('remove') + ' Delete', playing, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3"><%= playing.location %></div>
      <div class="span7"><%= playing.content %></div>
    </div>
  </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    //<![CDATA[
    var positions = $.parseJSON('<%=j get_positions(@playings).to_json.html_safe %>');
    // ]]>
</script>
